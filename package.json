{
  "name": "unified-inbox",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:web": "npm run dev -w apps/web",
    "dev:api": "npm run dev -w apps/api",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run db:generate && npm run build -w apps/api",
    "db:generate": "npx prisma generate --schema=packages/shared/prisma/schema.prisma",
    "db:migrate": "npm run db:migrate -w packages/shared",
    "db:push": "npm run db:push -w packages/shared",
    "db:studio": "npm run db:studio -w packages/shared",
    "seed:demo": "npx tsx scripts/seed-demo.ts"
  },
  "devDependencies": {
    "bcryptjs": "^2.4.3",
    "tsx": "^4.19.2",
    "turbo": "^2.3.0"
  }
}
